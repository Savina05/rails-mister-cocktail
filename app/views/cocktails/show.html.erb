<div class="container">
  <h1><%= @cocktail.name %></h1>

  <h3>List of Ingredients</h3>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <%= link_to cocktail_dose_path(@cocktail.id, dose), method: :delete do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>

  <p><%= link_to "Back", root_path %></p>
</div>

