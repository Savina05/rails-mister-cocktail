<h1>Add a new dose for <%= @cocktail.name %></h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.hidden_field :cocktail_id, :value => @cocktail.id %>
  <%= f.button :submit, class: "pink-btn" %>
<% end %>

<p><%= link_to "Go Back", root_path %></p>
